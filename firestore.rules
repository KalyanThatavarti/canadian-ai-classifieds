rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users Collection
    match /users/{userId} {
      // Anyone can read user profiles
      allow read: if true;
      
      // Users can update their own profile; Admins can update any user (moderation/limits)
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Only admins can delete users (handled server-side)
      allow delete: if false;
      
      // Favorites subcollection
      match /favorites/{favoriteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Listings Collection - FIXED FOR GOOGLE AUTH
    match /listings/{listingId} {
      // Anyone can read listings
      allow read: if true;
      
      // Any authenticated user can create listings (removed email_verified check)
      // This allows BOTH email/password AND Google authenticated users to post ads
      allow create: if request.auth != null;
      
      // Only the owner or admin can update/delete
      allow update: if request.auth != null && 
                      (request.auth.uid == resource.data.userId || isAdmin());
      allow delete: if request.auth != null && 
                      (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // Reports Collection
    match /reports/{reportId} {
      // Only authenticated users can read reports (privacy)
      allow read: if request.auth != null;
      
      // Any authenticated user can create a report
      allow create: if request.auth != null;
      
      // Only admins can update/delete reports
      allow update, delete: if isAdmin();
    }
    
    // Conversations Collection - ADDED FOR MESSAGE PROTECTION
    match /conversations/{conversationId} {
      // Allow authenticated users to list conversations
      // Security is enforced by the query's array-contains filter on participantIds
      allow list: if request.auth != null;
      
      // Allow reading individual conversations where user is a participant
      allow get: if request.auth != null && 
                    request.auth.uid in resource.data.participantIds;
      
      // Users can create conversations (when starting a chat)
      allow create: if request.auth != null && 
                       request.auth.uid in request.resource.data.participantIds;
      
      // Only participants can update conversation metadata (e.g., read status)
      allow update: if request.auth != null && 
                       request.auth.uid in resource.data.participantIds;
      
      // Conversations cannot be deleted directly (only archived/hidden)
      allow delete: if false;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Only conversation participants can read messages
        allow read: if request.auth != null && 
                      request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        
        // Only participants can send messages
        allow create: if request.auth != null && 
                        request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds &&
                        request.resource.data.senderId == request.auth.uid;
        
        // Messages cannot be updated or deleted (message history preservation)
        allow update, delete: if false;
      }
    }
    
    // Admin Logs Collection
    match /adminLogs/{logId} {
      // Only admins can read logs
      allow read: if isAdmin();
      
      // Only admins can create logs
      allow create: if isAdmin();
      
      // Logs cannot be updated or deleted (audit trail)
      allow update, delete: if false;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Global Platform Settings
    match /system_settings/limits {
      // Anyone logged in can read global limits
      allow read: if request.auth != null;
      // Only Admins can modify global limits
      allow write: if isAdmin();
    }

    // Usage Tracking
    match /usage_tracking/{usageId} {
      // Users can only read/write their own daily usage records
      // Admins can manage any usage records (e.g. for resetting/debugging)
      allow read, write: if request.auth != null && (usageId.split('_')[0] == request.auth.uid || isAdmin());
    }
  }
}
